{% block _ad_form_images_widget %}
    <p>Ajoutez ici vos autres images :</p>
    
    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">

    <div class="form-group">
        <button type="button" id="addimage" class="btn btn-info">Ajouter une image</button>
    </div>
{% endblock %}

{% block _ad_form_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _ad_form_images_entry_widget %}
    <div class="form-group" id="block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col mb-2">
                        {{ form_widget(form.url) }}
                    </div>
                    <div class="col mb-2">
                        {{ form_widget(form.caption) }}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-danger" data-action="delete" data-target="#block_{{id}}">X</button>
            </div>   
        </div>
    </div>
{% endblock %}